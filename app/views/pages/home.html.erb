<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.4)), url(<%= image_path('treehouse.jpg') %>)">
  <div class="banner-content">
    <h1 class="text-center">Plan your next adventure</h1>
    <div class="search-form">
      <form action="search" class="form-inline">
        <input type="text" class="form-control input-lg" placeholder="Your destination">
        <input type="date" class="form-control input-lg" placeholder="DD/MM/YYYY">
        <input type="number" class="form-control input-lg" placeholder="Number of Guests">
        <input type="submit" class="btn btn-primary btn-lg">
      </form>
    </div>
  </div>
</div>




