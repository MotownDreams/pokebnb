<div class="page-content">
  <div class="index-flex">
    <div class="flats-list">
      <h1 class="main-title text-center">All Flats</h1>

      <div class="row">
        <% @flats.each do |flat| %>
          <div class="col-md-6 col-lg-4">
            <div class="flats-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= flat.photos.first ? flat.photos.first.photo : image_path('apt-beton.jpg') %>');">
              <div class="card-content">
                <p class="card-location"><%= flat.location %></p>
                <h3 class="card-name"><%= flat.name %></h3>
              </div>
              <div class="card-price">
                <h3> â‚¬<%= flat.price_per_night %></h3>
              </div>
              <%= link_to "", flat_path(flat), class: "card-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
<!-- Gmaps JavaScript -->
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
</script>


