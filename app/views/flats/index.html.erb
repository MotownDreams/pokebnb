<div class="page-content">
  <div class="index-flex">
    <div class="flats-list">
      <h1 class="main-title text-center">All Flats</h1>

      <div class="row">
          <% @flats.each do |flat| %>
            <div class="col-md-6 col-lg-4">
              <div class="card flats-card">
                <% if flat.photos.first %>
                  <div class="cardimg" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path(flat.photos.first.photo) %>');">
                </div>
                <% else %>
                  <div class="cardimg">
                  </div>
                <% end %>
             <!--    <div class="cardimg" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path("apt-beton.jpg") %>');">
                </div> -->
                <div class="cardcontent text-center">
                  <p><%= flat.location %></p>
                  <h3><%= flat.name %></h3>
                </div>
                <div class="cardfooter">
                  <h3> â‚¬<%= flat.price_per_night %></h3>
                  <a href="#"><i class="far fa-heart"></i></a>
                </div>
                <%= link_to "", flat_path(flat), class: "card-link" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
    <div id="map"></div>
  </div>
</div>





<script>
  function initMap() {
    // Create a map object and specify the DOM element for display.
    var map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 52.5206, lng: 13.4098},
      scrollwheel: false,
      zoom: 8
    });
  }
</script>
<!-- Gmaps JavaScript -->
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
</script>



