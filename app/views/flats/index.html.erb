<div class="page-content">
  <div class="index-flex">
    <div class="flats-list">
      <h1 class="main-title text-center">All Flats</h1>
      <div class="row">
        <% @flats.each do |flat| %>
          <div class="col-sm-6 col-md-4">
            <div class="flat-card">
              <div class="card-details text-center">
                <h3><%= flat.location %></h3>
              </div>
              <%= link_to "", flat_path(flat), class: "card-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="map">
    </div>
  </div>
</div>
