<div class="page-content">
  <div class="index-flex">
    <div class="flats-list">
      <h1 class="main-title text-center">All Flats</h1>
      <div class="row">
        <% @flats.each do |flat| %>
          <div class="col-sm-6 col-lg-4">
            <div class="flats-card">
              <div class="card-details text-center">
                <h3><%= flat.location %></h3>
              </div>
              <%= link_to "", flat_path(flat), class: "card-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="map"></div>
  </div>
</div>

<script>
  function initMap() {
    // Create a map object and specify the DOM element for display.
    var map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 52.5206, lng: 13.4098},
      scrollwheel: false,
      zoom: 8
    });
  }
</script>
<!-- Gmaps JavaScript -->
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
</script>
