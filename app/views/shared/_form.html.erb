<div class="container" >
  <h1 class="text-center">List Your Flat! </h1>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for(flat) do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :price_per_night %>
      <%= f.input :description %>
      <%= f.button :submit %>
      <% end %>
    <div>
  <div>
</div>
